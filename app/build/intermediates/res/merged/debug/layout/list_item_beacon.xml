<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNomeBeacon"
        android:text="tvNomeBeacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:text="Unique Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvUID"
        android:text="tvUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:text="Major / Minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvMajorMinor"
        android:text="tvMajorMinor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:text="RSS/ Distance "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tvRSSIDistance"
        android:text="RSSI / Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textStyle="bold"/>

</LinearLayout>
