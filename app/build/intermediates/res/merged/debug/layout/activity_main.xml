<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="borba.com.br.blindbeacon.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:background="#bd2334f9">

        <ImageView
            android:id="@+id/header"
            android:src="@mipmap/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Blind Beacon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:text="Bem vindo ao Blind Beacon"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="8dp"
        android:paddingTop="18dp"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/buttonSelecionarPredio"
        android:background="@color/botaoBack"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Selecione o Setor"
        android:onClick="onClickSelecionarPredio"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/buttonAjuda"
        android:background="@color/botaoBack"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Ajuda"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/buttonOuvirNovamente"
        android:background="@color/botaoBack"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Ouvir Novamente"/>

</LinearLayout>

