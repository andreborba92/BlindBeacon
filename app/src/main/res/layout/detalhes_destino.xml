<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNomePredio"
        android:text="Nome Predio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNomeDestino"
        android:text="Nome Destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescricaoDestino"
        android:text="Descrição Destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/tvCategoriaDestino"
        android:text="Categoria Destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvDistanciaDestino"
        android:text="Distância Destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:paddingBottom="3dp"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>